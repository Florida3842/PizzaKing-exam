@using PizzaKing.Interfaces
@using PizzaKing.Repositories
@inject ICategory _categories
@{
    var allCategories = await _categories.GetAllCategoriesAsync();
}
@inject CartRepository _cart
@{
    var cartProductCount = await _cart.GetShopCartItemsCountAsync();

    // Текущий маршрут для подсветки активного пункта меню
    var ctrl = (ViewContext.RouteData.Values["controller"] as string) ?? "";
    var act = (ViewContext.RouteData.Values["action"] as string) ?? "";
    Func<string, string, bool> IsActive = (c, a) =>
        ctrl.Equals(c, StringComparison.OrdinalIgnoreCase) &&
        act.Equals(a, StringComparison.OrdinalIgnoreCase);
}

<style>
    .themability_megamenu .dropdown:hover > .dropdown-menu {
        display: block;
        opacity: 1;
        visibility: visible;
    }

    /* Подменю внутри dropdown */
    .dropdown-submenu {
        position: relative;
    }

        .dropdown-submenu > .dropdown-menu {
            top: 0;
            left: 100%;
            margin-top: -1px;
            display: none;
        }

        .dropdown-submenu:hover > .dropdown-menu {
            display: block;
        }

    .dropdown-menu {
        background-color: #fff;
        border-radius: 8px;
        padding: 8px;
        min-width: 180px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.15);
    }

        .dropdown-menu li a {
            display: block;
            padding: 8px 14px;
            color: #333;
            font-size: 16px;
            text-decoration: none;
        }

            .dropdown-menu li a:hover {
                background-color: #f4f4f4;
            }
</style>

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PizzaStar</title>
    <meta name="description" content="PizzaStar - Вкусная пица!">

    @await Html.PartialAsync("_StylesPartial")
</head>
<body class="homepage">
    <div class="loader"></div>

    <nav id="top">
        <div class="container">
            <div class="top-left">
                <div class="contact-info">
                    <a href="callto:+380970601478">
                        <i class="fa fa-phone"></i>
                        <span>+38 (097) 060-14-78</span>
                    </a>
                </div>
            </div>
            <div class="top-right">
                <div class="pull-left">
                    <form action="" method="post" enctype="multipart/form-data" id="form-language">
                        <div class="btn-group">
                            <button class="btn btn-link dropdown-toggle" data-toggle="dropdown">
                                <img src="assets/images/en-gb.png" alt="English" title="English" class="language-img">
                                <span class="drop-text">Языки</span>
                                <span class="code">Укр-Рус</span>
                                <i class="fa fa-angle-down"></i>
                            </button>
                            <ul class="dropdown-menu language-dropdown dropdown-menu-right">
                                <li>
                                    <button class="btn btn-link btn-block language-select" type="button" name="en-gb">
                                        <img src="assets/images/en-gb.png" alt="English" title="English">
                                        Украинский
                                    </button>
                                </li>
                                <li>
                                    <button class="btn btn-link btn-block language-select" type="button" name="ar">
                                        <img src="assets/images/ar.png" alt="Arabic" title="Arabic">
                                        Русский
                                    </button>
                                </li>
                            </ul>
                        </div>
                        <input type="hidden" name="code" value="">
                        <input type="hidden" name="redirect" value="">
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <header class="home">
        <div class="container">
            <div class="header-inner">
                <div class="header-left">
                    <div id="logo">
                        <a asp-controller="Home" asp-action="Index">
                            <img src="~/assets/images/logo-white.png" title="PizzaStar" alt="PizzaStar" class="img-responsive">
                        </a>
                    </div>
                </div>

                <div class="header-center">
                    <div class="themability_megamenu-style-dev">
                        <div class="responsive themability_default">
                            <nav class="navbar-default">
                                <div class="container-themability_megamenu horizontal">
                                    <div class="navbar-header">
                                        <button type="button" id="show-themability_megamenu" data-toggle="collapse" class="navbar-toggle">
                                            <span class="icon-bar"></span>
                                            <span class="icon-bar"></span>
                                            <span class="icon-bar"></span>
                                        </button>
                                    </div>

                                    <div class="themability_megamenu-wrapper megamenu_typeheader">
                                        <span id="remove-themability_megamenu" class="fa fa-times"></span>

                                        <div class="themability_megamenu-pattern">
                                            <div class="container">
                                                <ul class="themability_megamenu" data-megamenuid="55" data-transition="slide" data-animationtime="500">
                                                    <!-- Главная активна только когда нет выбранной категории -->
                                                    <li class="home @((ViewBag.CategoryId == null && IsActive("Home","Index")) ? "current-active active-first" : "")">
                                                        <a asp-controller="Home" asp-action="Index">
                                                            <span><strong> Главная </strong></span>
                                                        </a>
                                                    </li>

                                                    <li class="dropdown">
                                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                                            <span><strong>Меню</strong> <i class="fa fa-angle-down"></i></span>
                                                        </a>

                                                        <ul class="dropdown-menu">
                                                            @{
                                                                var pizzas = allCategories.FirstOrDefault(c => c.Name.Contains("пиц", StringComparison.OrdinalIgnoreCase));
                                                                var salads = allCategories.FirstOrDefault(c => c.Name.Contains("салат", StringComparison.OrdinalIgnoreCase));
                                                                var drinks = allCategories.FirstOrDefault(c => c.Name.Contains("напит", StringComparison.OrdinalIgnoreCase) || c.Name.Contains("drink", StringComparison.OrdinalIgnoreCase));
                                                            }

                                                            @if (pizzas != null)
                                                            {
                                                                <li><a asp-controller="Home" asp-action="Index" asp-route-categoryId="@pizzas.Id">Пиццы</a></li>
                                                            }

                                                            @if (salads != null)
                                                            {
                                                                <li><a asp-controller="Home" asp-action="Index" asp-route-categoryId="@salads.Id">Салаты</a></li>
                                                            }

                                                            @if (drinks != null)
                                                            {
                                                                <li><a asp-controller="Home" asp-action="Index" asp-route-categoryId="@drinks.Id">Напитки</a></li>
                                                            }
                                                        </ul>
                                                    </li>

                                                    <li class="@(IsActive("Info","Delivery") ? "current-active active-first" : "")">
                                                        <a asp-controller="Info" asp-action="Delivery">
                                                            <span><strong> Доставка </strong></span>
                                                        </a>
                                                    </li>

                                                    <li class="@(IsActive("Info","Contact") ? "current-active active-first" : "")">
                                                        <a asp-controller="Info" asp-action="Contact">
                                                            <span><strong> Контакты </strong></span>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </nav>
                        </div>
                    </div>
                </div>

                <div class="header-right">
                    <div class="search-content">
                        <div class="search-btn-outer hidden-lg hidden-md"><i class="fa fa-search"></i></div>
                        <div class="header-search">
                            <form method="get" asp-controller="Home" asp-action="Index">
                                <div id="themabilitySearch" class="input-group themability-search">
                                    <input type="text" name="options.SearchTerm" placeholder="Поиск..." class="form-control input-lg ui-autocomplete-input" />
                                    <input type="hidden" name="options.SearchPropertyName" value="Name" />
                                    <span class="btn-search input-group-btn">
                                        <button type="submit" class="btn btn-default btn-lg"><i class="fa fa-search"></i></button>
                                    </span>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="cart-content">
                        <div class="btn-group btn-block">
                            <a asp-controller="ShopCart" asp-action="Index" class="btn btn-inverse btn-block btn-lg">
                                <i class="fa fa-shopping-cart"></i> <span id="cartProductNumber">@(cartProductCount > 0 ? cartProductCount : 0)</span>
                            </a>
                        </div>
                    </div>

                    <div id="header_ac" class="dropdown">
                        <a href="#" title="My Account" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-user"></i><span class="hidden">My Account</span><span class="caret hidden"></span>
                        </a>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <ul class="dropdown-menu dropdown-menu-right account-link-toggle">
                                <li><span class="dropdown-item-text">@User.Identity.Name</span></li>

                                @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
                                {
                                    <li><a asp-controller="Panel" asp-action="Index">Панель управления</a></li>
                                }
                                <li><a asp-controller="Order" asp-action="MyOrders">Мои заказы</a></li>
                                <li class="text-sm-center">
                                    <form method="post" asp-controller="Account" asp-action="Logout">
                                        <input class="btn btn-dark" type="submit" value="Выход" />
                                    </form>
                                </li>
                            </ul>
                        }
                        else
                        {
                            <ul class="dropdown-menu dropdown-menu-right account-link-toggle">
                                <li><a asp-controller="Account" asp-action="Register">Регистрация</a></li>
                                <li><a asp-controller="Account" asp-action="Login">Авторизация</a></li>
                            </ul>
                        }
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container-full ">
        @RenderBody()
    </div>

    <footer>
        <div class="container">
            <div class="footer-top">
                <div class="row">
                    <div class="col-md-3">
                        <div class="position-footer-left">
                            <h5 class="toggled title">Контакты</h5>
                            <ul class="list-unstyled">
                                <li>
                                    <div class="site">
                                        <div class="contact_title"><i class="fa-solid fa-location-dot"></i></div>
                                        <div class="contact_site">Украина, Днепр, проспект Свободы 23.</div>
                                    </div>
                                </li>
                                <li>
                                    <div class="phone">
                                        <div class="contact_title"><i class="fa fa-phone"></i></div>
                                        <div class="contact_site">+38 (097) 060-14-78</div>
                                    </div>
                                </li>
                                <li>
                                    <div class="email">
                                        <div class="contact_title"><i class="fa fa-envelope"></i></div>
                                        <div class="contact_site">
                                            <a href="mailto:email@gmail.com" class="contact_site"><span class="__cf_email__">email@gmail.com</span></a>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <h5 class="toggled">Меню</h5>
                        <ul class="list-unstyled">
                            <li><a asp-controller="Home" asp-action="Index">Главная</a></li>
                            @foreach (Category category in allCategories)
                            {
                                <li>
                                    <a asp-controller="Home" asp-action="Index" asp-route-categoryId="@category.Id">@category.Name</a>
                                </li>
                            }
                            <li><a asp-controller="Info" asp-action="Delivery" class="contact_site">Доставка</a></li>
                            <li><a asp-controller="Info" asp-action="Contact" class="contact_site">Контакты</a></li>
                        </ul>
                    </div>

                    <div class="col-md-3">
                        <h5 class="toggled">Дополнительно</h5>
                        <ul class="list-unstyled">
                            <li><a asp-controller="Info" asp-action="Delivery" class="contact_site">Доставка</a></li>
                            <li><a asp-controller="Info" asp-action="Contact" class="contact_site">Контакты</a></li>
                            <li><a href="#">Карта сайта</a></li>
                            <li><a asp-controller="Account" asp-action="Login">Мой Аккаунт</a></li>
                        </ul>
                    </div>

                    <div class="col-md-3">
                        <div class="position-footer-right">
                            <div class="follow-link">
                                <h4>Социальные сети</h4>
                                <div class="social-media">
                                    <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
                                    <a href="#"><i class="fa-brands fa-twitter"></i></a>
                                    <a href="#"><i class="fa-brands fa-instagram"></i></a>
                                    <a href="#"><i class="fa-brands fa-pinterest-p"></i></a>
                                    <a href="#"><i class="fa-brands fa-youtube"></i></a>
                                </div>
                            </div>
                            <div class="payment-link">
                                <h4>Платежные системы</h4>
                                <div class="payment-method">
                                    <a><i class="fa-brands fa-cc-visa"></i></a>
                                    <a><i class="fa fa-credit-card"></i></a>
                                    <a><i class="fa-brands fa-cc-mastercard"></i></a>
                                    <a><i class="fa-brands fa-cc-paypal"></i></a>
                                    <a><i class="fa-brands fa-cc-discover"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <p class="copyright">© 2023 PizzaStar - Все права защищены.</p>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
    @await Html.PartialAsync("_ScriptsPartial")
</body>
</html>
