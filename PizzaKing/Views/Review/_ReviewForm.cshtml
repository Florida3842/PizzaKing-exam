@model PizzaKing.ViewModels.ReviewCreateViewModel

<form asp-action="Create" asp-controller="Reviews" method="post" enctype="multipart/form-data">
    <div class="form-group mb-2">
        <label asp-for="Author"></label>
        <input asp-for="Author" class="form-control" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Text"></label>
        <textarea asp-for="Text" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Rating"></label>
        <select asp-for="Rating" class="form-select">
            <option value="5">★★★★★</option>
            <option value="4">★★★★</option>
            <option value="3">★★★</option>
            <option value="2">★★</option>
            <option value="1">★</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success w-100">Отправить отзыв</button>
</form>
