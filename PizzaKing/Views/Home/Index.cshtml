
<div class="blog-section donuts">
	<div class="container">
		<div class="row">
			<div id="content" class="col-sm-12  all-blog">
				<div class="breadcrumb-main">
					<div class="breadcrumb-container clearfix">
						<h1 class="page-title">@ViewData["Title"]</h1>
					</div>
				</div>

				<div class="row">
					<div class="category-img col-sm-12">
						<img src="assets/images/banners/category_banner1.jpg" alt="donuts" title="donuts" class="img-fluid w-100">
					</div>
				</div>
				<a asp-controller="Home" asp-action="Menu" class="btn btn-primary">Меню</a>
				@{
					var reviewsModel = ViewBag.Reviews as IEnumerable<PizzaKing.ViewModels.ReviewViewModel>;
				}
				<div class="row mt-4">
					<div class="col-sm-12">
						<h3 class="section-title">Отзывы клиентов</h3>

						@if (reviewsModel != null && reviewsModel.Any())
						{
							@await Html.PartialAsync("~/Views/Review/_ReviewsCarousel.cshtml", reviewsModel)
						}
						else
						{
							<div class="alert alert-light p-3">
								<p class="mb-0">Отзывов пока нет — будьте первым!</p>
							</div>
						}
						<div class="text-center mt-3">
							<button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#reviewFormCollapse">
								Оставить отзыв
							</button>
						</div>

						<div class="collapse mt-4" id="reviewFormCollapse">
							<div class="card card-body shadow-sm">
								@await Html.PartialAsync("~/Views/Review/_ReviewForm.cshtml", new PizzaKing.ViewModels.ReviewCreateViewModel())
							</div>
						</div>
					</div>
				</div>
			</div>
			

		</div>
	</div>
</div>


