@model EditCartItemViewModel
@{
    ViewData["Title"] = "Редактировать ингредиенты";
}

<div class="container py-5">

    <h2 class="mb-4 text-center text-primary">Редактировать ингредиенты</h2>

    <div class="p-4 bg-light rounded-4 shadow-sm">

        <form asp-action="EditIngredients" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ShopCartItemId" />

            <div class="mb-4">
                <label class="form-label fw-bold">Тесто</label>
                <select asp-for="SelectedCrustId" class="form-select form-select-lg border-primary shadow-sm">
                    @foreach (var crust in Model.Crusts)
                    {
                        <option value="@crust.Id" selected="@(Model.SelectedCrustId == crust.Id ? "selected" : null)">
                            @crust.Name (@crust.Price.ToString("0.00")₴)
                        </option>
                    }
                </select>
            </div>

            <div class="mb-4">
                <label class="form-label fw-bold">Соус</label>
                <select asp-for="SelectedSauceId" class="form-select form-select-lg border-danger shadow-sm">
                    @foreach (var sauce in Model.Sauces)
                    {
                        <option value="@sauce.Id" selected="@(Model.SelectedSauceId == sauce.Id ? "selected" : null)">
                            @sauce.Name (@sauce.Price.ToString("0.00")₴)
                        </option>
                    }
                </select>
            </div>

            <div class="mb-4">
                <label class="form-label fw-bold">Топпинги</label>
                <div class="row row-cols-2 row-cols-md-3 g-3 justify-content-center">
                    @foreach (var topping in Model.Toppings)
                    {
                        <div class="col">
                            <div class="card text-center h-100 shadow-sm border-0 topping-card">
                                <div class="card-body d-flex flex-column justify-content-center">
                                    <input class="form-check-input mx-auto mb-2" type="checkbox" name="SelectedToppingIds" value="@topping.Id"
                                           @(Model.SelectedToppingIds.Contains(topping.Id) ? "checked" : "") id="topping-@topping.Id" />
                                    <label class="form-check-label fw-semibold" for="topping-@topping.Id">
                                        @topping.Name<br />
                                        <span class="text-muted">@topping.Price.ToString("0.00")₴</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-center gap-3">
                <button type="submit" class="btn btn-primary btn-lg px-4">Сохранить</button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">Отмена</a>
            </div>
        </form>

    </div>
</div>
