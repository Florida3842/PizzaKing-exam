@model IEnumerable<ShopCartItem>
@{
    ViewData["Title"] = "Корзина";
    decimal totalPrice = 0;
}

<style>
    /* === Общие стили страницы корзины === */
    .cart-title {
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 20px;
        text-align: center;
    }

    table.table {
        font-size: 1.1rem; /* увеличен общий размер шрифта */
    }

        table.table th {
            font-size: 1.15rem;
            text-transform: uppercase;
            background-color: #f8f9fa;
        }

        table.table td {
            vertical-align: middle;
            padding: 12px;
        }

    .btn {
        font-size: 1rem !important;
    }

    .checkout-img {
        width: 90px;
        height: 90px;
        object-fit: cover;
    }

    .cart-total-title {
        font-size: 1.1rem;
        font-weight: 500;
    }

    .cart-total-price {
        font-size: 1.1rem;
        font-weight: 600;
    }

    /* Ингредиенты под товаром */
    .ingredient-row {
        background-color: #fafafa;
        font-size: 1rem;
    }

    /* Для визуального баланса */
    .breadcrumb-main h1.page-title {
        font-size: 1.6rem;
    }

    .buttons .btn {
        padding: 10px 20px;
    }
</style>

<div class="blog-section">
    <div id="checkout-cart" class="container">
        <div class="row">
            <div id="content" class="col-sm-12">
                <div class="breadcrumb-main">
                    <div class="breadcrumb-container clearfix">
                        <h1 class="page-title">Корзина</h1>
                        <ul class="breadcrumb">
                            <li><a asp-controller="Home" asp-action="Index">Главная</a></li>
                            <li><a asp-controller="ShopCart" asp-action="Index">Корзина</a></li>
                        </ul>
                    </div>
                </div>

                @if (Model.Any())
                {
                    <h1 class="cart-title">Ваш заказ</h1>

                    <div class="table-responsive">
                        <table class="table table-bordered align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th class="text-center">Изображение</th>
                                    <th class="text-center">Название</th>
                                    <th class="text-center">Цена</th>
                                    <th class="text-center">Количество</th>
                                    <th class="text-center">Итог</th>
                                    <th class="text-center">Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center">
                                            <img src="@item.Product.Image" alt="@item.Product.Name" title="@item.Product.Name" class="img-thumbnail checkout-img" />
                                        </td>

                                        <td class="text-center align-middle">
                                            <a asp-controller="Home"
                                               asp-action="GetProduct"
                                               asp-route-productId="@item.Product.Id"
                                               asp-route-returnUrl="@ViewContext.HttpContext.Request.PathAndQuery()">
                                                <h5>@item.Product.Name</h5>
                                            </a>
                                        </td>

                                        <td class="text-center align-middle">₴@item.Price</td>

                                        <td class="text-center align-middle">
                                            <form method="post" class="d-inline">
                                                <div class="input-group justify-content-center">
                                                    <button asp-controller="ShopCart"
                                                            asp-action="DecrementQuantity"
                                                            asp-route-shopCartItemId="@item.Id"
                                                            type="submit"
                                                            class="btn btn-outline-secondary btn-sm">
                                                        <i class="fa fa-minus"></i>
                                                    </button>
                                                    <input type="text"
                                                           name="quantity"
                                                           value="@item.Count"
                                                           class="form-control form-control-sm text-center mx-1"
                                                           style="width:50px;" />
                                                    <button asp-controller="ShopCart"
                                                            asp-action="IncrementQuantity"
                                                            asp-route-shopCartItemId="@item.Id"
                                                            type="submit"
                                                            class="btn btn-outline-secondary btn-sm">
                                                        <i class="fa fa-plus"></i>
                                                    </button>
                                                </div>
                                            </form>
                                        </td>

                                        <td class="text-center align-middle">₴@(item.Price* item.Count)</td>

                                        <td class="text-center align-middle">
                                            <div class="d-flex justify-content-end gap-2">
                                                <a asp-controller="ShopCart"
                                                   asp-action="EditIngredients"
                                                   asp-route-shopCartItemId="@item.Id"
                                                   class="btn btn-outline-primary btn-sm">
                                                    Редактировать ингредиенты
                                                </a>

                                                <form asp-controller="ShopCart"
                                                      asp-action="RemoveFromCart"
                                                      asp-route-shopCartItemId="@item.Id"
                                                      method="post"
                                                      class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit"
                                                            class="btn btn-outline-danger btn-sm"
                                                            title="Удалить">
                                                        <i class="fa fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>

                                    @if (item.Ingredients != null && item.Ingredients.Any())
                                    {
                                        <tr class="bg-light">
                                            <td></td>
                                            <td colspan="5">
                                                <strong>Ингредиенты:</strong><br />
                                                @foreach (var si in item.Ingredients)
                                                {
                                                    <span>@si.Ingredient.Name (@si.Type.ToString())</span>
                                                    @(si != item.Ingredients.Last() ? ", " : "")
                                                }
                                            </td>
                                        </tr>
                                    }

                                    totalPrice += item.Price * item.Count;
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="row">
                        <div class="col-sm-4 col-sm-offset-8">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <td class="text-left cart-total-title">Промежуточный итог:</td>
                                        <td class="text-right cart-total-price">₴@totalPrice</td>
                                    </tr>
                                    <tr>
                                        <td class="text-left cart-total-title">Скидки:</td>
                                        <td class="text-right cart-total-price">₴0.00</td>
                                    </tr>
                                    <tr>
                                        <td class="text-left cart-total-title">Всего:</td>
                                        <td class="text-right cart-total-price">₴@totalPrice</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="buttons clearfix">
                            <div class="pull-left">
                                <a asp-controller="Home" asp-action="Index" class="btn btn-default">Продолжить покупки</a>
                            </div>
                            <form asp-controller="Order" asp-action="Index">
                                <div class="pull-right">
                                    <button type="submit" class="btn btn-primary">Оформить заказ</button>
                                </div>
                            </form>
                        </div>
                    </div>
                }
                else
                {
                    <h1 class="cart-title">Ваша корзина пуста!</h1>
                    <div class="buttons clearfix text-center">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-default">Начать покупки</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
