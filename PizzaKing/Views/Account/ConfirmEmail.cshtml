@{
    var ok = (bool)(ViewBag.Succeeded ?? false);
    var err = ViewBag.Error as string;
}
<div class="row justify-content-center">
    <div class="col-sm-6">
        <div class="well mt-5 text-center">
            <h3>@(ok ? "E-mail подтверждён 🎉" : "Не удалось подтвердить e-mail")</h3>
            @if (!ok && !string.IsNullOrEmpty(err))
            {
                <div class="text-danger mt-2">@err</div>
            }
            <a class="btn btn-primary mt-3" asp-controller="Account" asp-action="Login">Войти</a>
        </div>
    </div>
</div>
